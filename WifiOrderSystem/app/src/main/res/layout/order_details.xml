<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/order_detail_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/order_detail_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_detail_header_height"
        android:background="@color/detailHeaderBackground">

        <TextView
            android:id="@+id/order_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/list_item_padding"/>

        <TextView
            android:id="@+id/special_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/list_item_padding"/>
    </RelativeLayout>

    <fragment
        android:name="com.project.wifiordersystem.ui.OrderedDishesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>